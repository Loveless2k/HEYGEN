# Configuración del Backend - Landing Page
# Copia este archivo como .env y completa los valores

# Base de datos (opcional, para rate limiting avanzado)
DB_HOST=localhost
DB_NAME=tu_base_datos
DB_USER=tu_usuario
DB_PASS=tu_password

# Airtable
AIRTABLE_API_KEY=tu_airtable_token_aqui
AIRTABLE_BASE_ID=appoRKe4XVRRFY54Y
AIRTABLE_TABLE_NAME=LandingPageLeads

# reCAPTCHA
RECAPTCHA_SECRET_KEY=tu_recaptcha_secret_key
RECAPTCHA_SITE_KEY=tu_recaptcha_site_key

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=300
RATE_LIMIT_BLOCK_TIME=900

# Validación
MAX_NAME_LENGTH=50
MAX_EMAIL_LENGTH=100
MAX_PHONE_LENGTH=20

# Logging
ENABLE_LOGGING=true
LOG_DIRECTORY=../logs/

# Notificaciones
ADMIN_EMAIL=tu_email@dominio.com
ENABLE_EMAIL_NOTIFICATIONS=true
